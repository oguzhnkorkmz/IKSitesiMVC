@using IKSitesiMVC.Areas.SiteAdmin.DTO_s.Paket
@model IEnumerable<PaketList_DTO>

@{
    ViewData["Title"] = "Paket Listesi";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<div class="container mt-4">
    <h2 class="mb-4">Paket Listesi</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Listelenecek herhangi bir paket bulunamadı.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Paket ID</th>
                    <th>Paket Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PaketID</td>
                        <td>@item.PaketAdi</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.PaketID" class="btn btn-info btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@item.PaketID" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.PaketID" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">Yeni Paket Ekle</a>
    </div>
</div>