@using IKSitesiMVC.Areas.SiteAdmin.DTO_s.Paket
@model PaketDetail_DTO

@{
    ViewData["Title"] = "Paket Sil";
}



<div class="container mt-4">
    <h2 class="mb-4">Paket Sil</h2>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>@Model.PaketAdi (#@Model.PaketID)</h5>
        </div>
        <div class="card-body">
            <p><strong>Fiyat:</strong> @Model.Fiyat</p>
            <p><strong>Paket Süresi:</strong> @Model.PaketSuresi</p>
            <p><strong>Aktif Mi?:</strong> @(Model.AktifMi ? "Evet" : "Hayır")</p>
            <p><strong>Kapasite Sayısı:</strong> @Model.KapasiteSayisi</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="PaketID" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Paket Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>