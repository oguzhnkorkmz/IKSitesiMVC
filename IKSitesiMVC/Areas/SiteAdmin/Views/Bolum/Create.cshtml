@using IKSitesiMVC.Areas.SiteAdmin.DTO_s.Bolum
@model BolumEkle_DTO

<h2>Yeni Bölüm Ekle</h2>




<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BolumAdi"></label>
        <input asp-for="BolumAdi" class="form-control" />
        <span asp-validation-for="BolumAdi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Bölümü Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>