@{
    var token = Context.Request.Cookies["JWToken"];
}

<ul class="navbar-nav">
    @if (token != null)
    {
        <li class="nav-item">
            <span class="nav-link text-success">Hoş geldiniz</span>
        </li>
        <form method="post" asp-area="" asp-controller="Login" asp-action="Logout">
            <button type="submit" class="btn btn-link nav-link">Çıkış Yap</button>
        </form>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Login" asp-action="Login">Giriş Yap</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Login" asp-action="Register">Kayıt Ol</a>
        </li>
    }
</ul>
