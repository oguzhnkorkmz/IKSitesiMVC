@model IKSitesiMVC.ViewModels.AvansTalebi.AvansTalebi_VM

@{
    ViewData["Title"] = "Avans Talebi Gönder";
}

<h2>@ViewData["Title"]</h2>



<form asp-action="AvansTalebi" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="TalepEdilenTutar"></label>
        <input asp-for="TalepEdilenTutar" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="TalepEdilenTutar" class="text-danger"></span>
    </div>

    <!-- PersonelID bilgisi güvenlik nedeniyle gizli gönderiliyor -->
    <input type="hidden" asp-for="PersonelID" />

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}