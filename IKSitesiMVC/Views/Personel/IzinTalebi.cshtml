@model IKSitesiMVC.ViewModels.IzinTalebi.IzinTalebi_VM

@{
    ViewData["Title"] = "İzin Talebi Gönder";
}

<h2>@ViewData["Title"]</h2>



<form asp-action="IzinTalebi" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="BaslangicTarihi"></label>
        <input asp-for="BaslangicTarihi" type="date" class="form-control" />
        <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BitisTarihi"></label>
        <input asp-for="BitisTarihi" type="date" class="form-control" />
        <span asp-validation-for="BitisTarihi" class="text-danger"></span>
    </div>
    <!-- PersonelID bilgisini güvenlik açısından gizli alan olarak gönderiyoruz -->
    <input type="hidden" asp-for="PersonelID" />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}