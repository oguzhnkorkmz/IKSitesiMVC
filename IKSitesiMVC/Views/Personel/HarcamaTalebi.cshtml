@model IKSitesiMVC.ViewModels.HarcamaTalebi.HarcamaTalebi_VM

@{
    ViewData["Title"] = "Harcama Talebi Gönder";
}

<h2>@ViewData["Title"]</h2>



<form asp-action="HarcamaTalebi" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="HarcamaTutari"></label>
        <input asp-for="HarcamaTutari" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="HarcamaTutari" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <!-- PersonelID bilgisi güvenlik açısından gizli alan olarak gönderiliyor -->
    <input type="hidden" asp-for="PersonelID" />

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}