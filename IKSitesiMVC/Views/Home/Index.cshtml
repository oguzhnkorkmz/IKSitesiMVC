@using IKSitesiMVC.Areas.SiteAdmin.DTO_s.Paket
@model IEnumerable<PaketList_DTO>

@{
    ViewData["Title"] = "IKProje | İnsan Kaynakları Çözümleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <h1 class="display-4 fw-bold">İnsan Kaynaklarınıza Dijital Dokunuş</h1>
                <a asp-controller="Login" asp-action="Register" class="btn btn-primary btn-lg">Ücretsiz Deneyin</a>
            </div>
        </div>
    </div>
</section>


<!-- Features Section -->
<section class="features py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 feature">
                <i class="fas fa-calendar-check fa-3x mb-3 text-primary"></i>
                <h5>Kolay Takip</h5>
                <p>İzin, avans ve masraf taleplerini tek ekrandan yönetin.</p>
            </div>
            <div class="col-md-4 feature">
                <i class="fas fa-chart-line fa-3x mb-3 text-success"></i>
                <h5>Anlık Raporlama</h5>
                <p>Personel performansı ve harcamalarını gerçek zamanlı raporlayın.</p>
            </div>
            <div class="col-md-4 feature">
                <i class="fas fa-mobile-alt fa-3x mb-3 text-warning"></i>
                <h5>Mobil Uyumlu</h5>
                <p>Tüm cihazlardan erişim, ofiste olmadığınızda bile kontrol sizde.</p>
            </div>
        </div>
    </div>
</section>




<!-- Packages Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Paket Seçeneklerimiz</h2>
        <div class="row justify-content-center">
            @if (Model != null && Model.Any())
            {
                @foreach (var paket in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4 d-flex">
                        <div class="card paket-card w-100">
                            <div class="card-body">
                                <h5 class="card-title">@paket.PaketAdi</h5>
                                <p class="card-text text-muted">Kuruma özel avantajlı fiyat ve kapsamlı İK yönetim modülleri.</p>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Login" asp-action="Register" class="btn btn-outline-primary w-100">Hemen Üye Ol</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Henüz paket eklenmedi.</p>
            }
        </div>
    </div>
</section>




<!-- Testimonials Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Müşteri Yorumları</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="testimonial d-flex align-items-center">
                    <div>
                        <p class="mb-1"><strong>Ayşe Yılmaz</strong>, HR Müdürü</p>
                        <p>“KolayİK sayesinde izin onay süreçlerimiz %50 daha hızlı ilerliyor. Kesinlikle tavsiye ederim!”</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="testimonial d-flex align-items-center">

                    <div>
                        <p class="mb-1"><strong>Mehmet Demir</strong>, CFO</p>
                        <p>“Maliyet takibini ve raporlamayı kolaylaştırdı. Finans ekibimiz çok memnun!”</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="faq" class="faq py-5">
    <div class="container">
        <h2 class="text-center mb-4">Sık Sorulan Sorular</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq-heading-1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        Özellikler için eğitim veriyor musunuz?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Evet, paket içeriğimize göre online eğitim ve dokümantasyon desteği sağlıyoruz.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq-heading-2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Paket değiştirme veya yükseltme mümkün mü?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Evet, kullanıcı panelinden istediğiniz zaman paket değişikliği yapabilirsiniz.
                    </div>
                </div>
            </div>
            <!-- Gerektiğinde başka sorular da eklenebilir -->
        </div>
    </div>
</section>


<!-- Call to Action Section -->
<section class="cta-section text-center py-5 bg-white">
    <div class="container">
        <h2 class="mb-3">Tüm Özellikleri Hemen Keşfedin!</h2>
        <p class="mb-4">Şimdi ücretsiz kayıt olun ve firmanıza özel çözümlerimizden yararlanın.</p>
        <a href="#signup" class="btn btn-primary btn-lg">Üye Ol</a>
    </div>
</section>
