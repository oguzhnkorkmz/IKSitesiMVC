@model IKSitesiMVC.ViewModels.Login.ResetPassword_VM

@{
    ViewData["Title"] = "Şifreni Sıfırla";
}

<h2 class="mb-3">Şifreni Sıfırla</h2>

<form asp-action="ResetPassword" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-Posta</label>
        <input asp-for="Email" class="form-control" readonly="readonly" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrarı</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- Token, URL’den gelen değer olduğu için gizli alanda tutuluyor -->
    <input type="hidden" asp-for="Token" />

    <button type="submit" class="btn btn-primary">Şifre Sıfırla</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}